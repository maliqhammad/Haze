<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/nav_home">

    <fragment
        android:id="@+id/nav_home"
        android:name="com.hammad.iphoneringtones.ui.home.HomeFragment"
        android:label="@string/menu_home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_nav_home_to_nav_wallpapers"
            app:destination="@id/nav_wallpapers" />
        <action
            android:id="@+id/action_nav_home_to_nav_ringtones"
            app:destination="@id/nav_ringtones" />
    </fragment>

    <fragment
        android:id="@+id/nav_wallpapers"
        android:name="com.hammad.iphoneringtones.ui.wallpapers.WallpapersFragment"
        android:label="@string/menu_wallpapers"
        tools:layout="@layout/fragment_wallpapers">
        <action
            android:id="@+id/action_nav_wallpapers_to_nav_full_screen_wallpaper"
            app:destination="@id/nav_full_screen_wallpaper" />
    </fragment>

    <fragment
        android:id="@+id/nav_full_screen_wallpaper"
        android:name="com.hammad.iphoneringtones.ui.wallpapers.DisplayFullWallpaperFragment"
        android:label="@string/menu_wallpapers"
        tools:layout="@layout/fragment_display_full_wallpaper" />

    <fragment
        android:id="@+id/nav_ringtones"
        android:name="com.hammad.iphoneringtones.ui.ringtones.RingtonesFragment"
        android:label="@string/menu_ringtones"
        tools:layout="@layout/fragment_ringtones" />
</navigation>