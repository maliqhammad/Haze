<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorPrimary" />
            <gradient android:angle="-90" android:endColor="@color/white" android:startColor="@color/white" />
            <padding android:bottom="@dimen/_5sdp" android:left="@dimen/_10sdp" android:right="@dimen/_10sdp" android:top="@dimen/_5sdp" />
        </shape>
    </item>
    <item android:state_focused="true">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorPrimary" />
            <solid android:color="@color/white" />
        </shape>
    </item>
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/_15sdp" />
            <stroke android:width="@dimen/_2sdp" android:color="@color/colorPrimary" />
            <gradient android:angle="-90" android:endColor="@color/white" android:startColor="@color/white" />
        </shape>
    </item>
</selector>
