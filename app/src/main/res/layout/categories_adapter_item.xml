<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view_categories_adapter_item"
    android:layout_width="@dimen/_120sdp"
    android:layout_height="@dimen/_80sdp"
    android:layout_margin="@dimen/_5sdp"
    app:cardCornerRadius="@dimen/_15sdp"
    app:cardElevation="@dimen/_2sdp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/iv_categories_adapter_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/app_icon_simple" />


        <ProgressBar
            android:id="@+id/progress_bar_categories_adapter_item"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_centerInParent="true"
            android:layout_gravity="center"
            android:indeterminateDrawable="@drawable/progress_shape"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/tv_categories_adapter_item"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:background="@color/black_shadow"
            android:contentDescription="@string/todo"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="@string/todo"
            android:textAlignment="center"
            android:textColor="@color/white"
            android:textSize="@dimen/_14ssp"
            android:textStyle="bold" />

        <View
            android:id="@+id/view_categories_adapter_item"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            android:alpha="0.30"
            android:background="@color/amber"
            android:visibility="gone" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>