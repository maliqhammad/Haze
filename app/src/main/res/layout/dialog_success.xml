<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:id="@+id/mainLayoutDialog"
        android:layout_width="@dimen/_250sdp"
        android:layout_height="wrap_content"
        android:padding="@dimen/_3sdp"
        android:background="@drawable/bg_dialog"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <ImageView
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/ic_musical_download"
            android:scaleType="fitXY"
            android:layout_marginTop="@dimen/_15sdp"
            android:layout_gravity="center"
            android:contentDescription="@string/todo" />

        <TextView
            android:id="@+id/titleName"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:textAlignment="center"
            android:gravity="center"
            android:textSize="@dimen/_14ssp"
            android:textColor="@android:color/black"
            android:text="@string/success_message"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <Button
                android:layout_weight="1"
                android:id="@+id/_shareMusic"
                android:layout_width="0dp"
                android:layout_height="@dimen/_35sdp"
                android:text="@string/share_ringtone"
                android:layout_marginEnd="@dimen/_2sdp"
                android:layout_marginStart="@dimen/_2sdp"
                android:background="@drawable/bg_share_button"
                android:textAlignment="center"
                android:gravity="center"
                android:textSize="@dimen/_12ssp"
                android:textColor="@color/white"
                android:textStyle="bold"
                />
        </LinearLayout>

    </LinearLayout>

    <ImageView
        android:id="@+id/cancelDialog"
        android:layout_width="@dimen/_40sdp"
        android:layout_height="@dimen/_40sdp"
        android:src="@drawable/ic_cancel_icon"
        android:scaleType="fitXY"
        android:layout_marginTop="@dimen/_15sdp"
        app:layout_constraintTop_toTopOf="@+id/mainLayoutDialog"
        app:layout_constraintBottom_toTopOf="@+id/mainLayoutDialog"
        app:layout_constraintEnd_toEndOf="@+id/mainLayoutDialog"
        android:contentDescription="@string/todo" />

</androidx.constraintlayout.widget.ConstraintLayout>