<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/home_bg"
    tools:context=".ui.wallpapers.DisplayFullWallpaperActivity">

    <androidx.viewpager2.widget.ViewPager2
        android:id="@+id/view_pager_activity_display_full_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="horizontal" />

    <FrameLayout
        android:id="@+id/frame_layout_activity_display_full_wallpaper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:background="@drawable/gradient_trans">

        <ImageView
            android:id="@+id/iv_share_activity_display_full_wallpaper"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="start|center_vertical"
            android:layout_margin="@dimen/_30sdp"
            android:background="@drawable/imageview_shadow_rounded"
            android:contentDescription="@string/todo"
            android:padding="@dimen/_10sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_menu_share"
            android:visibility="invisible" />

        <ImageView
            android:id="@+id/iv_download_activity_display_full_wallpaper"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/_30sdp"
            android:background="@drawable/imageview_shadow_rounded"
            android:contentDescription="@string/todo"
            android:scaleType="centerCrop"
            android:src="@drawable/download_change_state_icon" />

        <ImageView
            android:id="@+id/iv_share1_activity_display_full_wallpaper"
            android:layout_width="@dimen/_40sdp"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="end|center_vertical"
            android:layout_margin="@dimen/_30sdp"
            android:background="@drawable/imageview_shadow_rounded"
            android:contentDescription="@string/todo"
            android:padding="@dimen/_10sdp"
            android:scaleType="centerCrop"
            android:src="@drawable/ic_share"
            android:visibility="invisible" />

    </FrameLayout>

</RelativeLayout>